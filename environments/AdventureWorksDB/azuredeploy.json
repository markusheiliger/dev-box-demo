                  "outputs": {
                    "Settings": {
                      "type": "object",
                      "value": "[reference(resourceId('Microsoft.Resources/deploymentScripts', 'EnvironmentSettings'), '2020-10-01').outputs]"
                    }
                  }
                }
              }
            }
