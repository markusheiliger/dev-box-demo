{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.13.1.58284",
      "templateHash": "15715526120089514078"
    }
  },
  "parameters": {
    "DatabaseUsername": {
      "type": "string"
    },
    "DatabasePassword": {
      "type": "secureString"
    }
  },
  "variables": {
    "ResourceLocation": "[resourceGroup().location]",
    "ResourcePrefix": "[uniqueString(resourceGroup().id)]",
    "SampleName": "AdventureWorksLT",
    "EnvironmentNetworkIdSegments": "[split(resourceGroup().tags.EnvironmentNetworkId, '/')]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2021-11-01",
      "name": "[format('{0}-SQL', variables('ResourcePrefix'))]",
      "location": "[variables('ResourceLocation')]",
      "properties": {
        "administratorLogin": "[parameters('DatabaseUsername')]",
        "administratorLoginPassword": "[parameters('DatabasePassword')]",
        "version": "12.0",
        "publicNetworkAccess": "Disabled"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2021-11-01",
      "name": "[format('{0}/{1}', format('{0}-SQL', variables('ResourcePrefix')), variables('SampleName'))]",
      "location": "[variables('ResourceLocation')]",
      "sku": {
        "name": "Basic",
        "tier": "Basic",
        "capacity": 5
      },
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 104857600,
        "sampleName": "[variables('SampleName')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', format('{0}-SQL', variables('ResourcePrefix')))]"
      ]
    },
    {
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2021-05-01",
      "name": "[format('{0}-SQL-PE', variables('ResourcePrefix'))]",
      "location": "[variables('ResourceLocation')]",
      "properties": {
        "subnet": {
          "id": "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', variables('EnvironmentNetworkIdSegments')[2], variables('EnvironmentNetworkIdSegments')[4]), 'Microsoft.Network/virtualNetworks/subnets', last(variables('EnvironmentNetworkIdSegments')), 'default')]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "[format('{0}-SQL', variables('ResourcePrefix'))]",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.Sql/servers', format('{0}-SQL', variables('ResourcePrefix')))]",
              "groupIds": [
                "sqlServer"
              ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', format('{0}-SQL', variables('ResourcePrefix')))]"
      ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "[format('{0}_{1}', take(deployment().name, 36), uniqueString('privatelinkDnsZone'))]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "DNSZoneName": {
            "value": "[format('privatelink{0}', environment().suffixes.sqlServerHostname)]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.13.1.58284",
              "templateHash": "14487418475932168943"
            }
          },
          "parameters": {
            "DNSZoneName": {
              "type": "string"
            }
          },
          "variables": {
            "$fxv#0": "DNSZoneId=$(az network private-dns zone show --subscription $Subscription --resource-group $ResourceGroup --name $(echo $DNSZoneName | tr '[:upper:]' '[:lower:]') --query id -o tsv --only-show-errors 2> /dev/null)\njq -n --arg id \"$DNSZoneId\" '{ DNSZoneId: $id }' >  $AZ_SCRIPTS_OUTPUT_PATH",
            "PrivateLinkResourceGroupIdSegments": "[split(resourceGroup().tags.PrivateLinkResourceGroupId, '/')]"
          },
          "resources": [
            {
              "type": "Microsoft.Resources/deploymentScripts",
              "apiVersion": "2020-10-01",
              "name": "[format('GetPrivateLinkDnsZoneId-{0}', replace(parameters('DNSZoneName'), '.', '_'))]",
              "location": "[resourceGroup().location]",
              "kind": "AzureCLI",
              "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                  "[format('{0}', resourceGroup().tags.PrivateLinkAutomationIdentityId)]": {}
                }
              },
              "properties": {
                "forceUpdateTag": "[guid(parameters('DNSZoneName'))]",
                "azCliVersion": "2.40.0",
                "timeout": "PT30M",
                "environmentVariables": [
                  {
                    "name": "Subscription",
                    "value": "[variables('PrivateLinkResourceGroupIdSegments')[2]]"
                  },
                  {
                    "name": "ResourceGroup",
                    "value": "[variables('PrivateLinkResourceGroupIdSegments')[4]]"
                  },
                  {
                    "name": "DNSZoneName",
                    "value": "[parameters('DNSZoneName')]"
                  }
                ],
                "scriptContent": "[variables('$fxv#0')]",
                "cleanupPreference": "OnSuccess",
                "retentionInterval": "P1D"
              }
            }
          ],
          "outputs": {
            "DNSZoneId": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.Resources/deploymentScripts', format('GetPrivateLinkDnsZoneId-{0}', replace(parameters('DNSZoneName'), '.', '_'))), '2020-10-01').outputs.DNSZoneId]"
            }
          }
        }
      }
    }
  ]
}